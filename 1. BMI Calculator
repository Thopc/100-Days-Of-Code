
print("Welcome to our BMI Calculator!")
height = float(input("please input your height in met: "))
weight = float(input("please input your weight in kg: "))

# làm tròn số bmi
bmi = round(weight/height ** 2) 
print(bmi)
if bmi < 18.5:
    print(f"Your bmi is {bmi} <18.5,You are underweight")
elif 18.5 <= bmi < 25:
    print(f"Your bmi is {bmi}, You are normal weight")
else:
    print(f"Your bmi is {bmi}, You are obese")
